{
  "description": "Hooks for wicked-delivery: delta-triggered metrics refresh and commentary generation",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/metrics_refresh.py\"",
            "timeout": 10000
          }
        ]
      },
      {
        "matcher": "TaskCreate",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/metrics_refresh.py\"",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
