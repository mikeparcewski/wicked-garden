{
  "catalogId": "memory",
  "version": "2.0.0",
  "description": "Memory and context components for timeline views, knowledge graphs, lifecycle management, and persistent knowledge",
  "components": {
    "MemoryDashboard": {
      "description": "Main memory management dashboard with multiple views.",
      "category": "layout",
      "props": {
        "title": {"type": "string", "description": "Dashboard title", "default": "Memory Store"},
        "view": {"type": "string", "description": "Active view", "enum": ["list", "timeline", "graph", "stats"]}
      },
      "slots": {
        "header": {"role": "display", "description": "Stats overview", "accepts": ["MemoryStats", "MemoryHealth"]},
        "content": {"role": "content", "description": "Memory content", "accepts": ["MemoryPanel", "MemoryTimeline", "MemoryGraph"]},
        "sidebar": {"role": "control", "description": "Filters and actions", "accepts": ["MemoryFilters", "MemoryActions"]}
      }
    },
    "MemoryPanel": {
      "description": "A panel container for displaying memory items grouped by type or tag.",
      "category": "layout",
      "props": {
        "title": {"type": "string", "description": "Panel header text"},
        "count": {"type": "number", "description": "Badge showing item count"},
        "type": {"type": "string", "description": "Filter to memory type", "enum": ["decision", "procedural", "episodic", "preference", "semantic"]},
        "collapsed": {"type": "boolean", "description": "Start collapsed", "default": false},
        "sortBy": {"type": "string", "description": "Sort field", "enum": ["timestamp", "importance", "accessCount", "title"]}
      },
      "slots": {
        "memories": {"role": "content", "description": "MemoryItem components", "accepts": ["MemoryItem", "MemoryCard"]}
      }
    },
    "MemoryItem": {
      "description": "A single memory entry showing content, type, and metadata.",
      "category": "content",
      "props": {
        "id": {"type": "string", "description": "Memory ID", "required": true},
        "type": {"type": "string", "description": "Memory type", "enum": ["decision", "procedural", "episodic", "preference", "semantic"], "required": true},
        "title": {"type": "string", "description": "Memory title/summary"},
        "content": {"type": "string", "description": "Full memory content", "required": true},
        "timestamp": {"type": "string", "description": "When memory was created (ISO)"},
        "tags": {"type": "array", "description": "Category tags"},
        "importance": {"type": "string", "description": "Importance level", "enum": ["critical", "high", "medium", "low"]},
        "status": {"type": "string", "description": "Lifecycle status", "enum": ["active", "archived", "decayed", "consolidated"]},
        "accessCount": {"type": "number", "description": "Times accessed"},
        "lastAccess": {"type": "string", "description": "Last access timestamp"},
        "source": {"type": "string", "description": "Where memory originated"},
        "relatedCount": {"type": "number", "description": "Related memories count"}
      }
    },
    "MemoryCard": {
      "description": "Compact card view of a memory for grid layouts.",
      "category": "content",
      "props": {
        "id": {"type": "string", "description": "Memory ID", "required": true},
        "type": {"type": "string", "description": "Memory type", "required": true},
        "title": {"type": "string", "description": "Memory title", "required": true},
        "preview": {"type": "string", "description": "Content preview"},
        "importance": {"type": "string", "description": "Importance level"},
        "status": {"type": "string", "description": "Lifecycle status"},
        "timestamp": {"type": "string", "description": "Creation time"},
        "tags": {"type": "array", "description": "Tags (limited display)"}
      }
    },
    "MemoryTimeline": {
      "description": "Chronological timeline view of memories.",
      "category": "layout",
      "props": {
        "title": {"type": "string", "description": "Timeline title", "default": "Memory Timeline"},
        "startDate": {"type": "string", "description": "Timeline start date"},
        "endDate": {"type": "string", "description": "Timeline end date"},
        "groupBy": {"type": "string", "description": "Group events by", "enum": ["day", "week", "month", "type"]},
        "showMilestones": {"type": "boolean", "description": "Highlight important memories", "default": true}
      },
      "slots": {
        "events": {"role": "content", "description": "Timeline events", "accepts": ["TimelineEvent", "MemoryItem"]}
      }
    },
    "TimelineEvent": {
      "description": "An event on the memory timeline.",
      "category": "content",
      "props": {
        "timestamp": {"type": "string", "description": "Event time", "required": true},
        "type": {"type": "string", "description": "Event type", "enum": ["created", "accessed", "updated", "archived", "consolidated", "decayed"]},
        "memoryId": {"type": "string", "description": "Related memory ID"},
        "title": {"type": "string", "description": "Event title"},
        "description": {"type": "string", "description": "Event description"},
        "isMilestone": {"type": "boolean", "description": "Is a milestone event", "default": false}
      }
    },
    "MemoryGraph": {
      "description": "Knowledge graph showing connections between memories.",
      "category": "display",
      "props": {
        "title": {"type": "string", "description": "Graph title", "default": "Memory Connections"},
        "nodes": {"type": "array", "description": "Graph nodes (memories)"},
        "edges": {"type": "array", "description": "Graph edges (relationships)"},
        "layout": {"type": "string", "description": "Graph layout", "enum": ["force", "hierarchical", "radial", "cluster"]},
        "focusNode": {"type": "string", "description": "Memory ID to center on"},
        "depth": {"type": "number", "description": "Relationship depth to show", "default": 2},
        "showLabels": {"type": "boolean", "description": "Show edge labels", "default": true}
      }
    },
    "MemoryRelationship": {
      "description": "A relationship between two memories.",
      "category": "content",
      "props": {
        "sourceId": {"type": "string", "description": "Source memory ID", "required": true},
        "targetId": {"type": "string", "description": "Target memory ID", "required": true},
        "type": {"type": "string", "description": "Relationship type", "enum": ["related", "derived", "contradicts", "supersedes", "supports", "context"], "required": true},
        "strength": {"type": "number", "description": "Relationship strength (0-1)"},
        "bidirectional": {"type": "boolean", "description": "Relationship goes both ways", "default": true}
      }
    },
    "RelatedMemories": {
      "description": "Panel showing memories related to a selected memory.",
      "category": "layout",
      "props": {
        "memoryId": {"type": "string", "description": "Source memory ID", "required": true},
        "relationshipTypes": {"type": "array", "description": "Filter by relationship types"},
        "limit": {"type": "number", "description": "Max related to show", "default": 10}
      },
      "slots": {
        "related": {"role": "content", "description": "Related memory cards", "accepts": ["MemoryCard", "MemoryItem"]}
      }
    },
    "ContextSummary": {
      "description": "Synthesized context summary from multiple memories.",
      "category": "display",
      "props": {
        "title": {"type": "string", "description": "Summary heading"},
        "summary": {"type": "string", "description": "Synthesized context text", "required": true},
        "sources": {"type": "array", "description": "Memory IDs that contributed"},
        "confidence": {"type": "string", "description": "Synthesis confidence", "enum": ["high", "medium", "low"]},
        "topics": {"type": "array", "description": "Key topics covered"},
        "generatedAt": {"type": "string", "description": "When summary was generated"}
      }
    },
    "DecisionLog": {
      "description": "Timeline view of decisions with rationale and outcomes.",
      "category": "layout",
      "props": {
        "title": {"type": "string", "description": "Log title", "default": "Decision History"},
        "limit": {"type": "number", "description": "Max decisions to show", "default": 20},
        "showOutcomes": {"type": "boolean", "description": "Show decision outcomes", "default": true}
      },
      "slots": {
        "decisions": {"role": "content", "description": "Decision items", "accepts": ["DecisionItem"]}
      }
    },
    "DecisionItem": {
      "description": "A single decision with context and outcome.",
      "category": "content",
      "props": {
        "id": {"type": "string", "description": "Decision memory ID", "required": true},
        "title": {"type": "string", "description": "Decision title", "required": true},
        "decision": {"type": "string", "description": "What was decided", "required": true},
        "rationale": {"type": "string", "description": "Why this decision was made"},
        "alternatives": {"type": "array", "description": "Alternatives considered"},
        "outcome": {"type": "string", "description": "Outcome if known", "enum": ["positive", "neutral", "negative", "pending"]},
        "timestamp": {"type": "string", "description": "When decision was made"},
        "tags": {"type": "array", "description": "Related topics"}
      }
    },
    "LearningCard": {
      "description": "A procedural learning or best practice.",
      "category": "content",
      "props": {
        "id": {"type": "string", "description": "Learning memory ID"},
        "title": {"type": "string", "description": "Learning title", "required": true},
        "content": {"type": "string", "description": "What was learned", "required": true},
        "context": {"type": "string", "description": "When/where this applies"},
        "source": {"type": "string", "description": "How it was learned", "enum": ["experience", "documentation", "discussion", "error"]},
        "confidence": {"type": "string", "description": "Confidence level", "enum": ["high", "medium", "low"]},
        "tags": {"type": "array", "description": "Related topics"},
        "examples": {"type": "array", "description": "Example applications"}
      }
    },
    "PreferenceCard": {
      "description": "A user preference or working style note.",
      "category": "content",
      "props": {
        "id": {"type": "string", "description": "Preference memory ID"},
        "category": {"type": "string", "description": "Preference category", "enum": ["coding_style", "communication", "tools", "workflow", "review"]},
        "preference": {"type": "string", "description": "The preference", "required": true},
        "reason": {"type": "string", "description": "Why this preference exists"},
        "strength": {"type": "string", "description": "Preference strength", "enum": ["strong", "moderate", "slight"]}
      }
    },
    "MemoryStats": {
      "description": "Statistics about the memory store.",
      "category": "display",
      "props": {
        "totalMemories": {"type": "number", "description": "Total memory count"},
        "byType": {"type": "object", "description": "Count by memory type"},
        "byStatus": {"type": "object", "description": "Count by lifecycle status"},
        "byImportance": {"type": "object", "description": "Count by importance"},
        "oldestMemory": {"type": "string", "description": "Oldest memory date"},
        "newestMemory": {"type": "string", "description": "Newest memory date"},
        "avgAge": {"type": "number", "description": "Average memory age (days)"}
      }
    },
    "MemoryHealth": {
      "description": "Memory store health indicators.",
      "category": "display",
      "props": {
        "status": {"type": "string", "description": "Overall health", "enum": ["healthy", "warning", "attention_needed"], "required": true},
        "staleCount": {"type": "number", "description": "Stale memories needing review"},
        "conflictCount": {"type": "number", "description": "Conflicting memories"},
        "orphanCount": {"type": "number", "description": "Unconnected memories"},
        "consolidationSuggestions": {"type": "number", "description": "Memories that could be consolidated"},
        "recommendations": {"type": "array", "description": "Health recommendations"}
      }
    },
    "DecayIndicator": {
      "description": "Visual indicator of memory decay status.",
      "category": "display",
      "props": {
        "memoryId": {"type": "string", "description": "Memory ID"},
        "status": {"type": "string", "description": "Decay status", "enum": ["fresh", "stable", "fading", "decaying", "archived"], "required": true},
        "lastAccess": {"type": "string", "description": "Last access time"},
        "daysSinceAccess": {"type": "number", "description": "Days since last access"},
        "decayDate": {"type": "string", "description": "Estimated decay date"}
      }
    },
    "MemoryFilters": {
      "description": "Filter controls for memory views.",
      "category": "control",
      "props": {
        "types": {"type": "array", "description": "Filter by types"},
        "statuses": {"type": "array", "description": "Filter by statuses"},
        "importance": {"type": "array", "description": "Filter by importance"},
        "tags": {"type": "array", "description": "Filter by tags"},
        "dateRange": {"type": "object", "description": "Filter by date range"},
        "searchQuery": {"type": "string", "description": "Text search query"}
      }
    },
    "MemorySearch": {
      "description": "Search interface for memories.",
      "category": "control",
      "props": {
        "placeholder": {"type": "string", "description": "Search placeholder", "default": "Search memories..."},
        "searchType": {"type": "string", "description": "Search mode", "enum": ["semantic", "keyword", "tag"]},
        "showSuggestions": {"type": "boolean", "description": "Show search suggestions", "default": true}
      }
    },
    "TagCloud": {
      "description": "Visual cloud of memory tags.",
      "category": "display",
      "props": {
        "tags": {"type": "array", "description": "Tags with counts", "required": true},
        "maxTags": {"type": "number", "description": "Max tags to show", "default": 50},
        "minCount": {"type": "number", "description": "Min count to include", "default": 1},
        "colorBy": {"type": "string", "description": "Color scheme", "enum": ["count", "type", "recency"]}
      }
    },
    "MemoryEditor": {
      "description": "Form for creating/editing memories.",
      "category": "control",
      "props": {
        "memoryId": {"type": "string", "description": "Memory ID (for editing)"},
        "mode": {"type": "string", "description": "Editor mode", "enum": ["create", "edit"], "required": true},
        "type": {"type": "string", "description": "Pre-selected type"},
        "initialContent": {"type": "string", "description": "Initial content"}
      }
    },
    "MemoryActions": {
      "description": "Action buttons for memory operations.",
      "category": "control",
      "props": {
        "memoryId": {"type": "string", "description": "Target memory ID"},
        "allowedActions": {"type": "array", "description": "Available actions", "default": ["edit", "archive", "delete", "boost", "relate"]}
      }
    },
    "ImportanceSlider": {
      "description": "Control to adjust memory importance.",
      "category": "control",
      "props": {
        "memoryId": {"type": "string", "description": "Memory ID", "required": true},
        "currentValue": {"type": "string", "description": "Current importance", "required": true},
        "showLabels": {"type": "boolean", "description": "Show importance labels", "default": true}
      }
    },
    "ArchivePanel": {
      "description": "Panel showing archived memories with restore option.",
      "category": "layout",
      "props": {
        "title": {"type": "string", "description": "Panel title", "default": "Archived Memories"},
        "sortBy": {"type": "string", "description": "Sort field", "enum": ["archivedAt", "importance", "title"]}
      },
      "slots": {
        "archived": {"role": "content", "description": "Archived memories", "accepts": ["MemoryCard", "MemoryItem"]}
      }
    },
    "ConsolidationView": {
      "description": "View for consolidating similar memories.",
      "category": "layout",
      "props": {
        "title": {"type": "string", "description": "View title", "default": "Consolidation Suggestions"},
        "threshold": {"type": "number", "description": "Similarity threshold (0-1)", "default": 0.8}
      },
      "slots": {
        "groups": {"role": "content", "description": "Consolidation groups", "accepts": ["ConsolidationGroup"]}
      }
    },
    "ConsolidationGroup": {
      "description": "A group of similar memories that could be consolidated.",
      "category": "content",
      "props": {
        "memories": {"type": "array", "description": "Memory IDs in group", "required": true},
        "similarity": {"type": "number", "description": "Similarity score"},
        "suggestedMerge": {"type": "string", "description": "Suggested merged content"},
        "status": {"type": "string", "description": "Consolidation status", "enum": ["suggested", "reviewing", "merged", "dismissed"]}
      }
    },
    "MemoryConflict": {
      "description": "Display of conflicting memories needing resolution.",
      "category": "content",
      "props": {
        "memory1Id": {"type": "string", "description": "First memory ID", "required": true},
        "memory2Id": {"type": "string", "description": "Second memory ID", "required": true},
        "conflictType": {"type": "string", "description": "Type of conflict", "enum": ["contradiction", "outdated", "duplicate"]},
        "description": {"type": "string", "description": "Conflict description"},
        "resolution": {"type": "string", "description": "Suggested resolution"}
      }
    },
    "SourceAttribution": {
      "description": "Shows where a memory originated from.",
      "category": "content",
      "props": {
        "source": {"type": "string", "description": "Source type", "enum": ["conversation", "file", "manual", "inference", "external"], "required": true},
        "sourceId": {"type": "string", "description": "Source identifier"},
        "timestamp": {"type": "string", "description": "When captured"},
        "confidence": {"type": "string", "description": "Extraction confidence", "enum": ["high", "medium", "low"]}
      }
    },
    "StaleMemoriesPanel": {
      "description": "Panel highlighting stale memories (30+ days since access) needing review.",
      "category": "layout",
      "props": {
        "title": {"type": "string", "description": "Panel title", "default": "Stale Memories"},
        "staleThreshold": {"type": "number", "description": "Days since access to be stale", "default": 30},
        "showActions": {"type": "boolean", "description": "Show quick actions", "default": true}
      },
      "slots": {
        "memories": {"role": "content", "description": "Stale memory items", "accepts": ["MemoryCard", "MemoryItem"]}
      }
    },
    "MemoryReviewDashboard": {
      "description": "Interactive review dashboard for managing memories by category.",
      "category": "layout",
      "props": {
        "project": {"type": "string", "description": "Project name"},
        "view": {"type": "string", "description": "Current view", "enum": ["overview", "decisions", "episodic", "procedural", "preferences", "stale"]}
      },
      "slots": {
        "categoryCards": {"role": "content", "description": "Category summary cards", "accepts": ["MemoryCategoryCard"]},
        "memoryList": {"role": "content", "description": "Memory list for selected category", "accepts": ["MemoryPanel", "MemoryCard"]},
        "detail": {"role": "content", "description": "Selected memory detail", "accepts": ["MemoryItem", "MemoryEditor"]},
        "actions": {"role": "actions", "description": "Bulk actions", "accepts": ["MemoryActions"]}
      }
    },
    "MemoryCategoryCard": {
      "description": "Summary card for a memory category with count and health.",
      "category": "content",
      "props": {
        "type": {"type": "string", "description": "Memory type", "enum": ["decision", "episodic", "procedural", "preference"], "required": true},
        "count": {"type": "number", "description": "Total in category"},
        "staleCount": {"type": "number", "description": "Stale memories in category"},
        "description": {"type": "string", "description": "Category description"},
        "ttlPolicy": {"type": "string", "description": "TTL policy (e.g., '90 days', 'permanent')"},
        "icon": {"type": "string", "description": "Category icon"}
      }
    }
  },
  "intents": {
    "show-memory-dashboard": {
      "description": "Show main memory management dashboard",
      "suggestedComponents": ["MemoryDashboard", "MemoryStats", "MemoryHealth", "MemoryPanel"],
      "requiredData": ["memories", "memoryStats"]
    },
    "show-context": {
      "description": "Show relevant context and memories for a topic",
      "suggestedComponents": ["ContextSummary", "MemoryPanel", "RelatedMemories"],
      "requiredData": ["memories"]
    },
    "show-memory-timeline": {
      "description": "Show chronological timeline of memories",
      "suggestedComponents": ["MemoryTimeline", "TimelineEvent"],
      "requiredData": ["memories"]
    },
    "show-memory-graph": {
      "description": "Show knowledge graph of memory connections",
      "suggestedComponents": ["MemoryGraph", "RelatedMemories"],
      "requiredData": ["memoryGraph"]
    },
    "show-decisions": {
      "description": "Show past decisions and their rationale",
      "suggestedComponents": ["DecisionLog", "DecisionItem"],
      "suggestedFilter": {"type": "decision"},
      "requiredData": ["memories"]
    },
    "show-learnings": {
      "description": "Show procedural learnings and best practices",
      "suggestedComponents": ["MemoryPanel", "LearningCard"],
      "suggestedFilter": {"type": "procedural"},
      "requiredData": ["memories"]
    },
    "show-preferences": {
      "description": "Show user preferences and working style",
      "suggestedComponents": ["MemoryPanel", "PreferenceCard"],
      "suggestedFilter": {"type": "preference"},
      "requiredData": ["memories"]
    },
    "show-memory-health": {
      "description": "Show memory store health and maintenance needs",
      "suggestedComponents": ["MemoryHealth", "MemoryStats", "ConsolidationView"],
      "requiredData": ["memoryHealth"]
    },
    "search-memories": {
      "description": "Search and filter memories",
      "suggestedComponents": ["MemorySearch", "MemoryFilters", "MemoryPanel"],
      "requiredData": ["memories"]
    },
    "show-tags": {
      "description": "Show memory tags visualization",
      "suggestedComponents": ["TagCloud", "MemoryFilters"],
      "requiredData": ["memoryTags"]
    },
    "manage-memory": {
      "description": "Create, edit, or manage a memory",
      "suggestedComponents": ["MemoryEditor", "MemoryActions", "ImportanceSlider"],
      "requiredData": ["memories"]
    },
    "show-archived": {
      "description": "Show archived memories",
      "suggestedComponents": ["ArchivePanel", "MemoryCard"],
      "requiredData": ["archivedMemories"]
    },
    "show-consolidation": {
      "description": "Show consolidation suggestions",
      "suggestedComponents": ["ConsolidationView", "ConsolidationGroup", "MemoryConflict"],
      "requiredData": ["consolidationSuggestions"]
    },
    "show-related": {
      "description": "Show memories related to a specific memory",
      "suggestedComponents": ["RelatedMemories", "MemoryGraph", "MemoryCard"],
      "requiredData": ["relatedMemories"]
    },
    "review-memories": {
      "description": "Interactive review of memories by category with update/archive options",
      "suggestedComponents": ["MemoryReviewDashboard", "MemoryCategoryCard", "StaleMemoriesPanel", "MemoryActions"],
      "requiredData": ["memories", "memoryStats", "staleMemories"]
    },
    "show-stale": {
      "description": "Show stale memories needing review or cleanup",
      "suggestedComponents": ["StaleMemoriesPanel", "MemoryCard", "MemoryActions"],
      "suggestedFilter": {"stale": true},
      "requiredData": ["staleMemories"]
    }
  },
  "dataBindings": {
    "memories": {
      "mcpServer": "memory",
      "tool": "recall",
      "description": "Retrieve memories matching query"
    },
    "memoryStats": {
      "mcpServer": "memory",
      "tool": "stats",
      "description": "Memory store statistics"
    },
    "memoryHealth": {
      "mcpServer": "memory",
      "tool": "health",
      "description": "Memory health status"
    },
    "memoryGraph": {
      "mcpServer": "memory",
      "tool": "graph",
      "description": "Memory relationship graph"
    },
    "memoryTags": {
      "mcpServer": "memory",
      "tool": "tags",
      "description": "Memory tags and counts"
    },
    "archivedMemories": {
      "mcpServer": "memory",
      "tool": "archived",
      "description": "Archived memories"
    },
    "consolidationSuggestions": {
      "mcpServer": "memory",
      "tool": "consolidation_suggestions",
      "description": "Memories that could be consolidated"
    },
    "relatedMemories": {
      "mcpServer": "memory",
      "tool": "related",
      "description": "Related memories for a given memory"
    },
    "staleMemories": {
      "mcpServer": "memory",
      "tool": "review",
      "params": {"stale": true},
      "description": "Memories not accessed in 30+ days"
    },
    "reviewData": {
      "mcpServer": "memory",
      "tool": "review",
      "description": "Categorized memories for review"
    }
  }
}
