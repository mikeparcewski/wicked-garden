{
  "description": "Hooks for wicked-agentic: auto-detect agentic frameworks and offer contextual guidance",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/detect_framework.py\" --quick --path \"${WORKING_DIRECTORY}\"",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
