{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["ts", "plugin", "script", "result", "violations", "duration_ms"],
    "properties": {
      "ts": { "type": "string" },
      "plugin": { "type": "string" },
      "script": { "type": "string" },
      "result": {
        "type": "string",
        "enum": ["pass", "timeout", "empty", "malformed"]
      },
      "violations": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["field", "message"],
          "properties": {
            "field": { "type": "string" },
            "message": { "type": "string" }
          }
        }
      },
      "duration_ms": { "type": "number" }
    }
  }
}
