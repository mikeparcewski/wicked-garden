{
  "catalogId": "kanban",
  "version": "0.2.0",
  "description": "Full-featured kanban board components for task, project, and initiative management with activity tracking, commits, and folder-based storage",
  "components": {
    "KanbanBoard": {
      "description": "A kanban board displaying tasks organized into swimlanes. Shows the full workflow view with drag-drop support.",
      "category": "layout",
      "props": {
        "title": {"type": "string", "description": "Board title"},
        "projectId": {"type": "string", "description": "Project ID to display", "required": true},
        "showInitiatives": {"type": "boolean", "description": "Show initiative filter", "default": true},
        "showSearch": {"type": "boolean", "description": "Show search bar", "default": true}
      },
      "slots": {
        "swimlanes": {"role": "content", "description": "Swimlane columns", "accepts": ["Swimlane"]},
        "header": {"role": "chrome", "description": "Board header with filters", "accepts": ["InitiativeSelector", "TaskSearch"]}
      }
    },
    "Swimlane": {
      "description": "A vertical column representing a workflow stage. Contains tasks and supports drag-drop.",
      "category": "layout",
      "props": {
        "id": {"type": "string", "description": "Swimlane ID", "required": true},
        "name": {"type": "string", "description": "Swimlane name", "required": true},
        "color": {"type": "string", "description": "Header color (hex or name)"},
        "isComplete": {"type": "boolean", "description": "Is this a completion swimlane", "default": false},
        "order": {"type": "number", "description": "Display order"},
        "taskCount": {"type": "number", "description": "Number of tasks in swimlane"}
      },
      "slots": {
        "tasks": {"role": "content", "description": "Tasks in this swimlane", "accepts": ["TaskCard"]}
      }
    },
    "TaskCard": {
      "description": "A card representing a single task with priority, phase, dependencies, and status indicators.",
      "category": "content",
      "props": {
        "id": {"type": "string", "description": "Task ID", "required": true},
        "name": {"type": "string", "description": "Task name", "required": true},
        "description": {"type": "string", "description": "Task description (markdown)"},
        "phase": {"type": "string", "description": "Current phase (e.g., 'design', 'implement', 'test')"},
        "priority": {"type": "string", "description": "Priority level", "enum": ["P0", "P1", "P2", "P3"], "default": "P2"},
        "swimlaneId": {"type": "string", "description": "Current swimlane"},
        "assignedTo": {"type": "string", "description": "Assigned person"},
        "initiativeId": {"type": "string", "description": "Parent initiative ID"},
        "isBlocked": {"type": "boolean", "description": "Is task blocked by dependencies", "default": false},
        "blockingDetails": {"type": "array", "description": "List of blocking task names"},
        "dependsOnCount": {"type": "number", "description": "Number of dependencies"},
        "blockingCount": {"type": "number", "description": "Number of tasks this blocks"},
        "traceabilityCount": {"type": "number", "description": "Number of traceability links"},
        "commitCount": {"type": "number", "description": "Number of linked commits"},
        "commentCount": {"type": "number", "description": "Number of comments"},
        "artifactCount": {"type": "number", "description": "Number of artifacts"}
      }
    },
    "TaskDetailPanel": {
      "description": "Full task detail view with tabs for details, comments, artifacts, commits, and metadata.",
      "category": "layout",
      "props": {
        "taskId": {"type": "string", "description": "Task ID to display", "required": true},
        "projectId": {"type": "string", "description": "Project context", "required": true},
        "activeTab": {"type": "string", "description": "Initially active tab", "enum": ["details", "comments", "artifacts", "commits", "metadata"], "default": "details"}
      },
      "slots": {
        "details": {"role": "content", "description": "Task details content", "accepts": ["TaskDetails"]},
        "comments": {"role": "content", "description": "Comments panel", "accepts": ["CommentsPanel"]},
        "artifacts": {"role": "content", "description": "Artifacts panel", "accepts": ["ArtifactsPanel"]},
        "commits": {"role": "content", "description": "Commits list", "accepts": ["CommitsList"]},
        "metadata": {"role": "content", "description": "Metadata display", "accepts": ["MetadataPanel"]}
      }
    },
    "TaskDetails": {
      "description": "The details tab content showing phase, initiative, dependencies, traceability, and criteria.",
      "category": "content",
      "props": {
        "phase": {"type": "string", "description": "Current phase"},
        "availablePhases": {"type": "array", "description": "List of available phases for autocomplete"},
        "initiativeId": {"type": "string", "description": "Parent initiative"},
        "assignedTo": {"type": "string", "description": "Assigned person"},
        "priority": {"type": "string", "description": "Priority", "enum": ["P0", "P1", "P2", "P3"]},
        "isBlocked": {"type": "boolean", "description": "Blocked status"},
        "blockingDetails": {"type": "array", "description": "What's blocking this task"},
        "description": {"type": "string", "description": "Task description (markdown)"},
        "acceptanceCriteria": {"type": "string", "description": "Acceptance criteria (markdown)"},
        "testCriteria": {"type": "string", "description": "Test criteria (markdown)"}
      },
      "slots": {
        "dependencies": {"role": "content", "description": "Dependency display", "accepts": ["DependencyList"]},
        "traceability": {"role": "content", "description": "Traceability links", "accepts": ["TraceabilityLinks"]}
      }
    },
    "TaskList": {
      "description": "A vertical list of tasks with optional filtering. Good for focused views.",
      "category": "layout",
      "props": {
        "title": {"type": "string", "description": "List header"},
        "filter": {"type": "object", "description": "Filter criteria (swimlane, priority, phase, initiative, assignee)"},
        "limit": {"type": "number", "description": "Max tasks to show", "default": 10},
        "showCounts": {"type": "boolean", "description": "Show indicator counts", "default": true}
      },
      "slots": {
        "children": {"role": "content", "description": "TaskCard components", "accepts": ["TaskCard"]}
      }
    },
    "TaskCount": {
      "description": "A numeric badge showing count of tasks matching criteria.",
      "category": "display",
      "props": {
        "count": {"type": "number", "description": "Count value", "required": true},
        "label": {"type": "string", "description": "Text label after number"},
        "variant": {"type": "string", "description": "Visual style", "enum": ["default", "warning", "success", "danger", "info"]}
      }
    },
    "InitiativeCard": {
      "description": "A card representing an initiative/epic with status, dates, and progress.",
      "category": "content",
      "props": {
        "id": {"type": "string", "description": "Initiative ID", "required": true},
        "name": {"type": "string", "description": "Initiative name", "required": true},
        "goal": {"type": "string", "description": "Initiative goal"},
        "status": {"type": "string", "description": "Initiative status", "enum": ["planning", "active", "completed"], "required": true},
        "startDate": {"type": "string", "description": "Start date ISO string"},
        "endDate": {"type": "string", "description": "End date ISO string"},
        "taskCount": {"type": "number", "description": "Number of tasks in initiative"},
        "completedTaskCount": {"type": "number", "description": "Completed tasks count"}
      }
    },
    "InitiativeList": {
      "description": "A list of initiatives for a project.",
      "category": "layout",
      "props": {
        "projectId": {"type": "string", "description": "Project to show initiatives for", "required": true},
        "filter": {"type": "object", "description": "Filter by status"}
      },
      "slots": {
        "children": {"role": "content", "description": "Initiative cards", "accepts": ["InitiativeCard"]}
      }
    },
    "InitiativeSelector": {
      "description": "Dropdown to filter by initiative.",
      "category": "control",
      "props": {
        "initiatives": {"type": "array", "description": "Available initiatives"},
        "selected": {"type": "string", "description": "Currently selected initiative ID"},
        "allowNone": {"type": "boolean", "description": "Allow 'All' option", "default": true}
      }
    },
    "ProjectCard": {
      "description": "A card representing a project with summary statistics.",
      "category": "content",
      "props": {
        "id": {"type": "string", "description": "Project ID", "required": true},
        "name": {"type": "string", "description": "Project name", "required": true},
        "description": {"type": "string", "description": "Project description"},
        "archived": {"type": "boolean", "description": "Is project archived", "default": false},
        "taskCount": {"type": "number", "description": "Total tasks"},
        "initiativeCount": {"type": "number", "description": "Total initiatives"},
        "swimlaneCount": {"type": "number", "description": "Number of swimlanes"}
      }
    },
    "ProjectSelector": {
      "description": "Dropdown to select active project. Filters all other kanban components.",
      "category": "control",
      "props": {
        "projects": {"type": "array", "description": "Available projects"},
        "selected": {"type": "string", "description": "Currently selected project ID"},
        "showArchived": {"type": "boolean", "description": "Include archived projects", "default": false}
      }
    },
    "ProjectSettings": {
      "description": "Project settings panel with acceptance criteria and testing strategy.",
      "category": "display",
      "props": {
        "projectId": {"type": "string", "description": "Project ID", "required": true},
        "name": {"type": "string", "description": "Project name"},
        "description": {"type": "string", "description": "Project description"},
        "acceptanceCriteria": {"type": "string", "description": "Default acceptance criteria template"},
        "testingStrategy": {"type": "string", "description": "Testing strategy documentation"}
      }
    },
    "CommentsPanel": {
      "description": "Panel displaying and allowing addition of comments.",
      "category": "layout",
      "props": {
        "entityType": {"type": "string", "description": "Type of entity", "enum": ["task", "project"], "required": true},
        "entityId": {"type": "string", "description": "ID of the entity", "required": true}
      },
      "slots": {
        "comments": {"role": "content", "description": "Comment items", "accepts": ["Comment"]}
      }
    },
    "Comment": {
      "description": "A single comment with author, timestamp, and content.",
      "category": "content",
      "props": {
        "id": {"type": "string", "description": "Comment ID", "required": true},
        "author": {"type": "string", "description": "Comment author"},
        "timestamp": {"type": "string", "description": "Comment timestamp ISO string", "required": true},
        "content": {"type": "string", "description": "Comment content (markdown)", "required": true}
      }
    },
    "ArtifactsPanel": {
      "description": "Panel displaying linked artifacts (URLs, files, tool invocations).",
      "category": "layout",
      "props": {
        "entityType": {"type": "string", "description": "Type of entity", "enum": ["task", "project"], "required": true},
        "entityId": {"type": "string", "description": "ID of the entity", "required": true}
      },
      "slots": {
        "artifacts": {"role": "content", "description": "Artifact items", "accepts": ["Artifact"]}
      }
    },
    "Artifact": {
      "description": "A linked artifact - URL, file, or tool invocation.",
      "category": "content",
      "props": {
        "type": {"type": "string", "description": "Artifact type", "enum": ["url", "file", "tool"], "required": true},
        "label": {"type": "string", "description": "Display label"},
        "url": {"type": "string", "description": "URL (for url type)"},
        "filePath": {"type": "string", "description": "File path (for file type)"},
        "toolSignature": {"type": "string", "description": "Tool signature (for tool type)"},
        "toolParams": {"type": "object", "description": "Tool parameters (for tool type)"}
      }
    },
    "DependencyList": {
      "description": "List of task dependencies showing what this task depends on.",
      "category": "display",
      "props": {
        "taskId": {"type": "string", "description": "Task to show dependencies for", "required": true},
        "dependencies": {"type": "array", "description": "List of dependency task IDs"},
        "showStatus": {"type": "boolean", "description": "Show dependency completion status", "default": true}
      }
    },
    "DependencyGraph": {
      "description": "Visual graph showing task dependencies and blocking relationships.",
      "category": "display",
      "props": {
        "projectId": {"type": "string", "description": "Project to visualize", "required": true},
        "focusTaskId": {"type": "string", "description": "Task to center the view on"},
        "depth": {"type": "number", "description": "Depth of dependencies to show", "default": 2}
      }
    },
    "TraceabilityLinks": {
      "description": "Display of traceability links to requirements, designs, specs, and issues.",
      "category": "display",
      "props": {
        "taskId": {"type": "string", "description": "Task to show links for", "required": true}
      },
      "slots": {
        "links": {"role": "content", "description": "Traceability link items", "accepts": ["TraceabilityLink"]}
      }
    },
    "TraceabilityLink": {
      "description": "A single traceability link to an external reference.",
      "category": "content",
      "props": {
        "type": {"type": "string", "description": "Link type", "enum": ["requirement", "design", "spec", "issue", "other"], "required": true},
        "ref": {"type": "string", "description": "Reference ID or URL", "required": true},
        "label": {"type": "string", "description": "Display label"}
      }
    },
    "CommitsList": {
      "description": "List of linked git commits for a task.",
      "category": "layout",
      "props": {
        "taskId": {"type": "string", "description": "Task to show commits for", "required": true}
      },
      "slots": {
        "commits": {"role": "content", "description": "Commit items", "accepts": ["CommitItem"]}
      }
    },
    "CommitItem": {
      "description": "A linked git commit.",
      "category": "content",
      "props": {
        "hash": {"type": "string", "description": "Commit hash (full or short)", "required": true},
        "message": {"type": "string", "description": "Commit message"},
        "author": {"type": "string", "description": "Commit author"},
        "timestamp": {"type": "string", "description": "Commit timestamp"}
      }
    },
    "MetadataPanel": {
      "description": "Display of arbitrary metadata key-value pairs.",
      "category": "display",
      "props": {
        "metadata": {"type": "object", "description": "Key-value metadata pairs"},
        "editable": {"type": "boolean", "description": "Allow editing metadata", "default": false}
      }
    },
    "TaskSearch": {
      "description": "Search input for filtering tasks by name, description, or other fields.",
      "category": "control",
      "props": {
        "placeholder": {"type": "string", "description": "Placeholder text", "default": "Search tasks..."},
        "searchFields": {"type": "array", "description": "Fields to search", "default": ["name", "description"]}
      }
    },
    "TaskTimeline": {
      "description": "Timeline view of tasks showing initiatives and progress over time.",
      "category": "layout",
      "props": {
        "projectId": {"type": "string", "description": "Project to display"},
        "startDate": {"type": "string", "description": "Timeline start date"},
        "endDate": {"type": "string", "description": "Timeline end date"},
        "groupBy": {"type": "string", "description": "Group by field", "enum": ["initiative", "swimlane", "priority", "assignee"]}
      },
      "slots": {
        "children": {"role": "content", "description": "Tasks to display on timeline", "accepts": ["TaskCard", "InitiativeCard"]}
      }
    },
    "BlockedAlert": {
      "description": "Alert showing blocked status with details of blocking tasks.",
      "category": "display",
      "props": {
        "isBlocked": {"type": "boolean", "description": "Is blocked", "required": true},
        "blockingTasks": {"type": "array", "description": "Names of blocking tasks"}
      }
    },
    "PriorityBadge": {
      "description": "Badge showing task priority with appropriate color coding.",
      "category": "display",
      "props": {
        "priority": {"type": "string", "description": "Priority level", "enum": ["P0", "P1", "P2", "P3"], "required": true},
        "showLabel": {"type": "boolean", "description": "Show priority label", "default": true}
      }
    },
    "PhaseBadge": {
      "description": "Badge showing current task phase.",
      "category": "display",
      "props": {
        "phase": {"type": "string", "description": "Current phase", "required": true},
        "color": {"type": "string", "description": "Badge color"}
      }
    }
  },
  "intents": {
    "show-kanban-board": {
      "description": "Display full kanban board with swimlanes for a project",
      "suggestedComponents": ["KanbanBoard", "Swimlane", "TaskCard", "InitiativeSelector"],
      "requiredData": ["project", "tasks", "swimlanes", "initiatives"]
    },
    "show-task-details": {
      "description": "Show full task details with all tabs",
      "suggestedComponents": ["TaskDetailPanel", "TaskDetails", "CommentsPanel", "ArtifactsPanel", "CommitsList"],
      "requiredData": ["task", "comments", "artifacts", "commits"]
    },
    "show-blocked-tasks": {
      "description": "Show tasks that are blocked by dependencies",
      "suggestedComponents": ["TaskList", "TaskCard", "TaskCount", "BlockedAlert"],
      "suggestedFilter": {"isBlocked": true},
      "requiredData": ["tasks"]
    },
    "show-critical-tasks": {
      "description": "Show P0 and P1 priority tasks",
      "suggestedComponents": ["TaskList", "TaskCard", "PriorityBadge"],
      "suggestedFilter": {"priority": ["P0", "P1"]},
      "requiredData": ["tasks"]
    },
    "show-my-tasks": {
      "description": "Show tasks assigned to current user",
      "suggestedComponents": ["TaskList", "TaskCard"],
      "requiredData": ["tasks", "currentUser"]
    },
    "show-initiative": {
      "description": "Show an initiative with its tasks",
      "suggestedComponents": ["InitiativeCard", "TaskList", "TaskCard"],
      "requiredData": ["initiative", "tasks"]
    },
    "show-initiatives": {
      "description": "Show all initiatives for a project",
      "suggestedComponents": ["InitiativeList", "InitiativeCard"],
      "requiredData": ["initiatives"]
    },
    "show-project-overview": {
      "description": "Overview of a project with stats and initiatives",
      "suggestedComponents": ["ProjectCard", "InitiativeList", "TaskCount"],
      "requiredData": ["project", "initiatives", "taskStats"]
    },
    "show-dependencies": {
      "description": "Show task dependency graph",
      "suggestedComponents": ["DependencyGraph", "DependencyList"],
      "requiredData": ["tasks", "dependencies"]
    },
    "show-task-traceability": {
      "description": "Show traceability links for a task",
      "suggestedComponents": ["TraceabilityLinks", "TraceabilityLink"],
      "requiredData": ["task", "traceability"]
    },
    "show-task-comments": {
      "description": "Show comments on a task",
      "suggestedComponents": ["CommentsPanel", "Comment"],
      "requiredData": ["comments"]
    },
    "show-task-artifacts": {
      "description": "Show artifacts linked to a task",
      "suggestedComponents": ["ArtifactsPanel", "Artifact"],
      "requiredData": ["artifacts"]
    },
    "show-task-commits": {
      "description": "Show commits linked to a task",
      "suggestedComponents": ["CommitsList", "CommitItem"],
      "requiredData": ["commits"]
    },
    "show-project-settings": {
      "description": "Show project settings and configuration",
      "suggestedComponents": ["ProjectSettings"],
      "requiredData": ["project"]
    },
    "show-timeline": {
      "description": "Show timeline view of tasks and initiatives",
      "suggestedComponents": ["TaskTimeline", "TaskCard", "InitiativeCard"],
      "requiredData": ["tasks", "initiatives"]
    },
    "manage-swimlanes": {
      "description": "Manage swimlane configuration",
      "suggestedComponents": ["Swimlane"],
      "requiredData": ["swimlanes"]
    }
  },
  "dataBindings": {
    "tasks": {
      "mcpServer": "kanban",
      "tool": "list_tasks",
      "description": "All tasks from a project"
    },
    "task": {
      "mcpServer": "kanban",
      "tool": "get_task",
      "description": "Single task details"
    },
    "projects": {
      "mcpServer": "kanban",
      "tool": "list_projects",
      "description": "Available projects"
    },
    "project": {
      "mcpServer": "kanban",
      "tool": "get_project",
      "description": "Single project details"
    },
    "initiatives": {
      "mcpServer": "kanban",
      "tool": "list_initiatives",
      "description": "Initiatives in a project"
    },
    "initiative": {
      "mcpServer": "kanban",
      "tool": "get_initiative",
      "description": "Single initiative details"
    },
    "swimlanes": {
      "mcpServer": "kanban",
      "tool": "list_swimlanes",
      "description": "Swimlanes in a project"
    },
    "comments": {
      "mcpServer": "kanban",
      "tool": "list_comments",
      "description": "Comments on an entity"
    },
    "artifacts": {
      "mcpServer": "kanban",
      "tool": "list_artifacts",
      "description": "Artifacts linked to an entity"
    },
    "commits": {
      "mcpServer": "kanban",
      "tool": "list_commits",
      "description": "Commits linked to a task"
    },
    "dependencies": {
      "mcpServer": "kanban",
      "tool": "get_dependencies",
      "description": "Task dependencies"
    },
    "traceability": {
      "mcpServer": "kanban",
      "tool": "get_traceability",
      "description": "Traceability links for a task"
    },
    "taskStats": {
      "mcpServer": "kanban",
      "tool": "get_task_stats",
      "description": "Task statistics for a project"
    }
  }
}
