# Database Configuration
DATABASE_URL=sqlite:///./wicked_workbench.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET_KEY=change-me-in-production-please-use-long-random-string

# Session Secret (IMPORTANT: Change this in production!)
SESSION_SECRET_KEY=another-secret-for-oauth-state-management

# Google OAuth (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# GitHub OAuth (Get from https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# Frontend URL (for OAuth redirects after login)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Optional: SQL Query Debugging
SQL_ECHO=false

# Optional: Wicked Plugins Directory
WICKED_PLUGINS_DIR=/path/to/wicked-garden/plugins
